<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="Error!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/connection_failure_info_header"
        android:layout_alignParentTop="true"
        android:textStyle="bold|italic"
        android:paddingTop="40dp"
        android:layout_centerInParent="true"
        android:textSize="40dp"
        android:typeface="monospace"
        tools:ignore="HardcodedText" />
    <Button
        android:text="Back"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/connection_failure_back_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        tools:ignore="HardcodedText" />
    <TextView
        android:text="The connection was unseccsesful.\nPlease go back and try again."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"
        android:layout_below="@id/connection_failure_info_header"
        android:id="@+id/connection_failure_info_body"
        android:layout_centerHorizontal="true"
        android:paddingTop="0dp"
        android:layout_width="wrap_content"
        android:typeface="monospace"
        tools:ignore="HardcodedText" />
</RelativeLayout>